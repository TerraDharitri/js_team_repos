{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "removeComments": true,
    "paths": {
      "*": [
        "node_modules/*",
        "apps/delegation-api/src/types/*"
      ],
      "@lib/shared": [
        "libs/shared/src"
      ],
      "@lib/shared/*": [
        "libs/shared/src/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": [
    "apps/delegation-api/src/**/*",
    "libs/shared/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
